{
  "name": "gamechanger-api",
  "version": "1.0.0",
  "description": "gamechanger backend",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --coverageDirectory=cobertura/coverage/jest --detectOpenHandles",
    "watchtest": "jest --watch --coverage=false --forceExit --onlyChanged",
    "prestart": "npm install",
    "start": "node index.js",
    "awsDocker": "npm start",
    "jest-coverage": "jest --coverage",
    "sonarscan": "sonar-scanner"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dod-advana/advana-api-auth": "0.0.9",
    "@elastic/elasticsearch": "^7.11.0",
    "async": "^2.6.0",
    "async-redis": "^1.1.7",
    "aws-sdk": "^2.848.0",
    "axios": "^0.21.1",
    "body-parser": "^1.17.1",
    "chai": "^4.3.0",
    "cors": "^2.8.5",
    "crypto-js": "3.1.9-1",
    "csv-stringify": "^5.5.3",
    "d3-force-3d": "^2.2.0",
    "dotenv": "^8.6.0",
    "express": "^4.14.1",
    "express-session": "^1.15.6",
    "hat": "0.0.3",
    "jsonwebtoken": "7.3.0",
    "lodash": "^4.17.21",
    "lunr": "^2.3.9",
    "mysql": "^2.18.1",
    "neo4j-driver": "^4.2.2",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.4.16",
    "pagerank.js": "^1.0.2",
    "passport": "^0.4.0",
    "passport-ldapauth": "^2.1.4",
    "pdfmake": "^0.1.68",
    "redis": "^2.8.0",
    "secure-random": "1.1.1",
    "sequelize": "^6.6.2",
    "sonarqube-scanner": "^2.5.0",
    "spark-md5": "^3.0.1",
    "ssh-key-decrypt": "latest",
    "swagger-jsdoc": "^6.0.1",
    "swagger-ui-express": "^4.1.6",
    "underscore": "^1.13.1",
    "winston": "^3.0.0-rc6"
  },
  "devDependencies": {
    "jest": "^25.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": [
      "text",
      "cobertura",
      "lcov"
    ],
    "testTimeout": 10000
  },
  "eslintConfig": {
    "rules": {
      "max-len": 0,
      "indent": [
        1,
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "space-before-function-paren": 0,
      "radix": 0,
      "comma-dangle": 0,
      "strict": 0,
      "no-throw-literal": 0,
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "no-eval": 0,
      "no-irregular-whitespace": [
        "error",
        {
          "skipComments": true
        }
      ]
    },
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    }
  }
}
