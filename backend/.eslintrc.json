{
  "extends": [ "prettier", "plugin:prettier/recommended"],
  "rules": {
    "no-useless-escape": 2,
    "no-undef": 2,
    "no-unused-vars": [
      "error",
      {
         "argsIgnorePattern": "^_+\\w+$"
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "max-len": 0,
    "space-before-function-paren": 0,
    "radix": 0,
    "comma-dangle": 0,
    "strict": 0,
    "no-throw-literal": 0,
    "no-eval": 0,
    "no-irregular-whitespace": [
      "error",
      {
        "skipComments": true
      }
    ]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  }
}