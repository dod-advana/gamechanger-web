{
	"presets": [
		"@babel/env",
		"@babel/react"
	],
    "plugins": [
        [
          "@babel/plugin-proposal-class-properties"
        ],

        // addresses ReferenceError: regeneratorRuntime is not defined
        // https://github.com/facebook/jest/issues/3126
        ["@babel/plugin-transform-runtime",
          {
            "regenerator": true
          }
        ]
    ]
}